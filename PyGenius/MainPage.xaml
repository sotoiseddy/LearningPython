<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PyGenius.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label x:Name="ChatDisplay" Text="Welcome to Python Tutor!" FontSize="18"/>

            <Button x:Name="btnGenerate" Text="Generate Challenge" Clicked="OnGenerateChallengeClicked"/>
            <Editor x:Name="CodeEditor"
        AutoSize="TextChanges"
                    HeightRequest="200"
        FontFamily="Consolas"
        FontSize="14"
        BackgroundColor="Black"
        TextColor="White"
        Placeholder="Write Python code here..."
   
                    TextChanged="OnCodeEditorTextChanged"/>
            
            <Button x:Name="btnSubmit" Text="Submit Code" Clicked="OnSubmitCodeClicked"/>

            <Label x:Name="lblProgress" Text="" IsVisible="False" FontSize="16"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
